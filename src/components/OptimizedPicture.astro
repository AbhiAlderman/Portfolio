---
import { Picture } from "astro:assets";

interface ImageData {
  src: string;
  height: number;
  width: number;
  format: "avif" | "png" | "webp" | "jpeg" | "jpg" | "svg" | "tiff" | "gif";
}

interface Props {
  src: string | ImageData;
  alt: string;
  widths?: number[];
  sizes?: string;
  formats?: string[];
  fallbackFormat?: string;
  class?: string;
}

const {
  src,
  alt,
  widths = [392, 700, 980, 1960],
  sizes = `(max-width: 360px) 392px, 
           (max-width: 720px) 700px, 
           (max-width: 1600px) 980px, 
           1960px`,
  formats = ["avif"],
  fallbackFormat = "avif",
  class: className = "mx-auto w-full max-w-full object-cover"
} = Astro.props;

const imageUrl = typeof src === 'object' ? src.src : src;
---

<Picture
  src={imageUrl}
  alt={alt}
  widths={widths}
  sizes={sizes}
  formats={formats}
  fallbackFormat={fallbackFormat}
  class={className}
  inferSize
/>
